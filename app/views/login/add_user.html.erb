<div class="ast-form">
  <%= error_messages_for 'user' %>
  
<fieldset>
  <legend>Enter User Details</legend>
  
<% form_for :user do |form| %>
    <p>
      <label for="user_name">Name:</label>
      <%= form.text_field :name, :size=>20, :maxlength=>20 %>
    </p>

    <p>
      <label for="user_password">Password:</label>
      <%= form.password_field :password, :size=>20, :maxlength=>20 %>
    </p>
  
    <p>
      <label for="user_password_confirmation">Confirm:</label>
      <%= form.password_field :password_confirmation, :size=>20, :maxlength=>20 %>
    </p>
        
    <p>
      <label for="user_email">E-mail:</label>
      <%= form.text_field :email, :size=>20, :maxlength=>40 %>
    </p>

     <p>
      <label for="user_in_game_name">In game name:</label>
      <%= form.text_field :in_game_name, :size=>16, :maxlength=>16 %>
    </p>

  <%= submit_tag "Add User", :class => "submit" %>

<% end %>
</fieldset>

</div>

